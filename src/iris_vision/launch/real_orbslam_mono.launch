<launch>
  <arg name="ns" default="" />
  <arg name="camera_name" default="$(arg ns)/camera" />
  <arg name="rgb_img" value="/camera/depth/image_rect_raw"/>

  <!-- ORB SLAM Arguments -->
  <arg name="vocabulary_file" default="/workspaces/swarm-uav/ThirdParty/ORB_SLAM2_NOETIC/Vocabulary/ORBvoc.txt"/>
  <arg name="settings_file" default="$(find iris_vision)/config/TUM.yaml"/>

  <!-- rosrun ORB_SLAM2 Mono PATH_TO_VOCABULARY PATH_TO_SETTINGS_FILE -->
  <node pkg="ORB_SLAM2" type="Mono" name="Mono" output="screen" args="$(arg vocabulary_file) $(arg settings_file)">
    <remap from="/camera/image_raw" to="$(arg rgb_img)"/>
  </node>
</launch>